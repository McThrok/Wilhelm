@{
    ViewBag.Title = "SignUnPage";
}
<div class="container">
    <div class="subContainer p-t-50 p-b-90">
        <div class="loginForm validateForm">
            <span class="loginFormTitle p-b-51">Sign Un</span>


            <div class="inputDiv validateInput m-b-16">
                <input id="login" class="inputField" type="text" placeholder="Usrname">
                <span class="focusInputField"></span>
            </div>

            <div class="inputDiv validateInput m-b-16">
                <input id="password" class="inputField" type="password" placeholder="Password">
                <span class="focusInputField"></span>
            </div>

            <div class="inputDiv validateInput m-b-16">
                <input id="confirmPassword" class="inputField" type="password" placeholder="Confirm password">
                <span class="focusInputField"></span>
            </div>

            <div m-t-17">
                <button id="js-button" class="loginFormBtn">
                    Sign Up
                </button>
            </div>

            <span class="loginFormTitle p-b-51">
                <a id="js-link">
                    Have an account? Log In!
                </a>
            </span>
        </div>
    </div>
</div>

@section scripts{
    @Scripts.Render("~/Scripts/Sign/signUp.js")
    @Styles.Render("~/Content/Signing.css")
}


