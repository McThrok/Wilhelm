<Application x:Class="Wilhelm.Client.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Wilhelm.Client"
             StartupUri="Views\Windows\MainWindowView.xaml">
    <Application.Resources>
        <Style TargetType="TextBlock" x:Key="TitlePage">
            <Setter Property="FontSize" Value="25"/>
            <Setter Property="Foreground" Value="#5a636f"/>
        </Style>
    </Application.Resources>
</Application>
