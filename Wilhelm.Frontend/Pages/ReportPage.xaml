<UserControl x:Class="Wilhelm.Frontend.Pages.ReportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Wilhelm.Frontend.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      >

    <DockPanel Margin="10,0,10,0">
        <TextBlock Height="50" Margin="0,10,0,0" TextAlignment="Center" Text="Reports" DockPanel.Dock="Top" Style="{StaticResource TitlePage }" />

        <ListView  DockPanel.Dock="Top"  Margin="0" Name="ReportListView" HorizontalContentAlignment="Stretch" >
            <ListView.View>
                <GridView >
                    <GridViewColumn Header="Category"  DisplayMemberBinding="{Binding Category}" />
                <GridViewColumn Header="Value"  DisplayMemberBinding="{Binding Value}" />
                </GridView>
            </ListView.View>
        </ListView>
    </DockPanel>
</UserControl>
